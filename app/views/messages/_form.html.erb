<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :lat %>
    <%= f.input :lon %>
    <%= f.association :user %>
    <%= f.input :target_email %>
    <%= f.input :address %>
    <%= f.input :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
